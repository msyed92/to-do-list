<%- include('header'); -%>
    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>
    <div class="box">
        <form action=<%=route %> method="POST" class="item">           
            <% for (let i=0; i<newListItems.length; i++) {%>
                <div class="item">
                    <input type="checkbox" name="checkedItems" value=<%=i %> <% if(checked == i.toString()){ %>
                        checked
                    <%  } else if (checked.includes(i.toString())){ %>
                        checked
                    <% } %>>
                    <p>
                        <%= newListItems[i] %>
                    </p>
                </div>
            <% } %>
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value=<%=listTitle %>>+</button>
        </form>    
    </div>
<%- include('footer'); -%>